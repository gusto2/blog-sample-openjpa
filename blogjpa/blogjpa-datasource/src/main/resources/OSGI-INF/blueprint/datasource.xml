<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.1.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.0.0"
           
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                        http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint-2.8.0.xsd
                        http://aries.apache.org/xmlns/transactions/v1.0.0 http://aries.apache.org/schemas/transaction/transactionv10.xsd
                        http://aries.apache.org/xmlns/jpa/v1.1.0 http://aries.apache.org/schemas/jpa/jpa_110.xsd"
>
    <!-- define a data source to personDB database, we assume the database is already created -->
     <bean id="derbyXaDataSource" class="org.apache.derby.jdbc.ClientXADataSource40">
        <property name="databaseName" value="personDB"/> 
        <property name="serverName" value="127.0.0.1" />
        <property name="user" value="app" />
        <property name="password" value="app" />
        <property name="portNumber" value="1527" />
        <property name="createDatabase" value="create" />
    </bean>
    <!-- register the data source as an osgi service  -->
    <service id="xaDataSource" ref="derbyXaDataSource" interface="javax.sql.DataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/test"/>
        </service-properties>
    </service>

    <bean id="pgDatSource" class="org.postgresql.xa.PGXADataSource">
        <property name="databaseName" value="ocm"/> 
        <property name="serverName" value="127.0.0.1" />
        <property name="user" value="ocm" />
        <property name="password" value="ocm" />
        <property name="portNumber" value="5432" />
    </bean>
    <service id="pgxaDataSource" ref="pgDatSource" interface="javax.sql.XADataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/test2"/>
        </service-properties>
    </service>  
    
    <!-- test bean -->
    <bean class="com.apogado.blogjpa.datasource.DsTest" init-method="test">
        <property name="datasource" ref="derbyXaDataSource" />
        <property name="testQuery" value="select * from SYS.SYSVIEWS" />
    </bean>
    
</blueprint>
